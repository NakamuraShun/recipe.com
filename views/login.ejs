<%- include("./partials/_header") %>

<!-- Page-title-area  -->
<section id="Page-title-area" class="bg-dark mb-2">
	<div class="container text-light page-title-area-content">
		<h2><i class="fas fa-sign-in-alt"></i> ログイン</h2>
	</div><!-- /.page-title-area-content -->
</section><!-- /#Page-title-area -->

<!-- flashes  -->
<div class="container">
	<% if(flashMsg.success){ %>
	<div class="alert alert-success" role="alert">
		<%= flashMsg.success %>
		<button type="button" class="ml-2 mb-1 close" data-dismiss="alert" aria-label="閉じる">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<% }else if(flashMsg.error){ %>
	<div class="alert alert-danger" role="alert">
		<%= flashMsg.error %>
		<button type="button" class="ml-2 mb-1 close" data-dismiss="alert" aria-label="閉じる">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<% } %>
</div>


<!-- registration-Form  -->
<section id="Registration" class="container my-4">
	<div class="row">
		<div class="col mx-auto">
			<hr>
			<p>以下情報を入力してログインしてください。</p>
			<p id="flashMessages"></p>
			<form action="/login" method="POST" class="py-3">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<div class="input-group-text"><i class="fas fa-envelope"></i></div>
					</div>
					<input type="email" name="email" class="form-control" placeholder="メールアドレス">
				</div>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<div class="input-group-text"><i class="fas fa-lock"></i></div>
					</div>
					<input type="password" name="password" class="form-control" placeholder="パスワード">
				</div>
				<button type="submit" class="btn btn-danger border-light btn-lg btn-block">
					ログイン
				</button>
			</form>
			<hr>
		</div><!-- /.col -->
	</div>
</section>




