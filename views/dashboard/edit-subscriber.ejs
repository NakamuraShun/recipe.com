<%- include("../partials/_header-dashboard") %>


<!-- ================ header: #Header ================  -->
<header id="Header" class="bg-secandary">
	<div class="container py-4 mb-4">
		<h1 class="mt-4">
			<i class="fas fa-rss-square" style="color:#ffc107;"></i> <%= subscriber._id %>の編集</h1>
	</div><!-- /.container -->
</header><!-- /#Header -->


<!-- ================ section:#Dashboard-detail  ================  -->
<section id="Dashboard-wrap" class="mb-5">
	<div class="container">
		<div class="row">
			<!-- **** #Dashboard-detail ****  -->
			<div class="col" id="Dashboard-detail">

				<form action="<%= `/dashboard/subscribers/${subscriber._id}/update?_method=PUT` %>" method="POST"
					class="form-group">
					<table class="table border text-nowrap">
						<tr>
							<th class="bg-warning text-light text-center">購読者ID</th>
							<td><%= subscriber._id %></td>
						</tr>
						<tr>
							<th class="bg-warning text-light text-center">氏名</th>
							<td><input type="text" class="form-control" name="name" value="<%= subscriber.name %>"
									placeholder="氏名" required>
							</td>
						</tr>
						<tr>
							<th class="bg-warning text-light text-center">メールアドレス</th>
							<td><input type="email" class="form-control" name="email" value="<%= subscriber.email %>"
									placeholder="メールアドレス" required>
							</td>
						</tr>
					</table>
					<button type="submit" class="btn btn-primary mb-4">更新</button>
				</form>

				<a href="<%= `/dashboard/subscribers/${subscriber._id}` %>" class="btn btn-secondary">更新をやめる</a>
				<a href="/dashboard/subscribers" class="btn btn-outline-secondary">メルマガ登録の情報一覧へ戻る</a>

			</div>
		</div><!-- /.col #Dashboard-list -->

	</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /#Dashboard-wrap (#Dashboard-list / #Sidenav-btn)  -->

<%- include("../partials/_footer-dashboard") %>