<%- include("../partials/_header-dashboard") %>



<!-- ================ header: #Header ================  -->
<header id="Header" class="bg-secandary">
	<div class="container py-4 mb-4">
		<h1 class="mt-4">
			<i class="fas fa-inbox" style="color:#28a745;"></i> レシピ管理</h1>
	</div><!-- /.container -->
</header><!-- /#Header -->

<!-- flashes  -->
<%- include("../partials/_flashes") %>

<!-- ================ section:#Dashboard-wrap (#Dashboard-list / #Sidenav-btn) ================  -->
<section id="Dashboard-wrap" class="mb-5">
	<div class="container">
		<div class="row">

			<!-- **** #Dashboard-list ****  -->
			<div class="col" id="Dashboard-list">
				<div class="card">
					<div class="card-header">
						<h4>レシピ情報一覧</h4>
					</div>
					<div class="card-body table-responsive p-0">
						<table class="table text-nowrap table-striped">
							<thead class="bg-success text-light text-center">
								<tr>
									<th>レシピID</th>
									<th>レシピ名</th>
									<th></th>
									<th></th>
									<th></th>
								</tr>
							</thead>
							<tbody class="text-center">
								<% courses.forEach( course =>{ %>
								<tr>
									<td><%= course._id %></td>
									<td><%= course.title %></td>
									<td>
										<a href="<%= `/dashboard/courses/${course._id}` %>"
											class="btn btn-outline-secondary">詳細</a>
									</td>
									<td>
										<a href="<%= `/dashboard/courses/${course._id}/edit` %>"
											class="btn btn-outline-primary">編集</a>
									</td>
									<td>
										<a href="<%= `/dashboard/courses/${course._id}/delete?_method=DELETE` %>"
											class="btn btn-outline-danger DeleteBtn">削除</a>
									</td>
								</tr>
								<% }); %>
							</tbody>
						</table>
					</div>
					<div class="card-footer">
						<div>
							<a href="/dashboard">＜ ダッシュボードトップに戻る</a>
						</div>
					</div>
				</div>
			</div><!-- /.col #Dashboard-list -->

		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /#Dashboard-wrap (#Dashboard-list / #Sidenav-btn)  -->

<%- include("../partials/_footer-dashboard") %>