<%- include("./partials/_header") %>


<!-- Page-title-area  -->
<section id="Page-title-area" class="bg-dark">
	<div class="container text-light page-title-area-content">
		<h2><i class="fas fa-bookmark" style="color:#28a745;"></i> 登録済みレシピ一覧</h2>
	</div><!-- /.page-title-area-content -->
</section><!-- /#Page-title-area -->

<!-- flashes  -->
<%- include("./partials/_flashes") %>


<!-- CoursesLIst  -->
<section id="CoursesLIst" class="container py-4">
	<div class="row">
		<% courses.forEach( course =>{ %>
		<div class="col-lg-6 mb-3">
			<div class="card">
				<div class="card-header">
					<strong><%= course.title %></strong>
				</div>
				<div class="card-body">
					<%= course.description %>
					<p class="mt-2">[材料]</p>
					<%= course.items %>
				</div>
			</div><!-- .card -->
		</div><!-- /.col -->
		<% }); %>
		<hr>
</section>



<%- include("./partials/_modal-course-list") %>
<%- include("./partials/_footer") %>